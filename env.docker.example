# Environment variables for Docker Compose
# Copy this file to .env.docker and modify as needed

# Database Configuration
POSTGRES_DB=member_api
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application Configuration
NODE_ENV=development
PORT=3000

# Prisma Database URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/member_api?schema=public"

# API Configuration
API_VERSION=v5
API_RATE_LIMIT=1000

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*
