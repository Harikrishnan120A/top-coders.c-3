# Environment Configuration for Member API

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/member_api?schema=public"

# API Configuration
API_VERSION=v5
BASE_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration (if needed later)
CACHE_TTL=300

# External API URLs (for data migration)
TOPCODER_API_BASE=https://api.topcoder-dev.com/v5
